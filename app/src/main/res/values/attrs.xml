<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CanvasView">
        <attr name="minZoom" format="float" />
        <attr name="maxZoom" format="float" />
        <attr name="zoomInterpolator" format="reference" />
        <attr name="moveInterpolator" format="reference" />
        <attr name="resetInterpolator" format="reference" />
    </declare-styleable>

    <declare-styleable name="NetworkView">
        <attr name="nodeRadius" format="dimension" />
        <attr name="connectionWidth" format="dimension" />
        <attr name="nodeColor" format="color" />
        <attr name="connectionColor" format="color" />
        <attr name="textColor" format="color" />
    </declare-styleable>

    <declare-styleable name="GradeTextView">
        <attr name="grade" format="float" />
        <attr name="maxGrade" format="float" />
        <attr name="gradeDecimals" format="integer" />
        <attr name="maxGradeDecimals" format="integer" />
    </declare-styleable>

    <declare-styleable name="StatusCardView">
        <attr name="headerText" format="string" />
        <attr name="approvedText" format="string" />
        <attr name="failedText" format="string" />
        <attr name="retiredText" format="string" />
        <attr name="approvedCount" format="integer" />
        <attr name="failedCount" format="integer" />
        <attr name="retiredCount" format="integer" />
    </declare-styleable>

    <declare-styleable name="AnimatedBackgroundView">
        <attr name="background" format="reference" />
        <attr name="scaleType" format="enum">
            <enum name="matrix" value="0" />
            <enum name="fitXY" value="1" />
            <enum name="fitStart" value="2" />
            <enum name="fitCenter" value="3" />
            <enum name="fitEnd" value="4" />
            <enum name="center" value="5" />
            <enum name="centerCrop" value="6" />
            <enum name="centerInside" value="7" />
        </attr>
    </declare-styleable>
</resources>
