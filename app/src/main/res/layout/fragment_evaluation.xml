<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tViewEvaluationHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_background"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingHorizontal="@dimen/dp_12"
        android:paddingVertical="@dimen/dp_6"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="CI2125 â€” COMPUTACION I" />

    <ScrollView
        android:id="@+id/sViewEvaluation"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@id/btnEvaluationSave"
        app:layout_constraintTop_toBottomOf="@id/tViewEvaluationHeader">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_16">

            <com.gdavidpb.tuindice.ui.customs.ValidatedTextInputLayout
                android:id="@+id/tInputEvaluationName"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_evaluation_name"
                app:layout_constraintTop_toTopOf="parent"
                app:startIconDrawable="@drawable/ic_label">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/eTextEvaluationName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:selectAllOnFocus="true"
                    android:inputType="textShortMessage|text|textCapSentences"
                    android:maxLength="32"
                    android:maxLines="1" />

            </com.gdavidpb.tuindice.ui.customs.ValidatedTextInputLayout>

            <com.gdavidpb.tuindice.ui.customs.ValidatedTextInputLayout
                android:id="@+id/tInputEvaluationGrade"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_24"
                android:hint="@string/hint_evaluation_grade"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tInputEvaluationName"
                app:startIconDrawable="@drawable/ic_donut">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/eTextEvaluationGrade"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:inputType="numberDecimal"
                    android:maxLength="6"
                    android:selectAllOnFocus="true" />

            </com.gdavidpb.tuindice.ui.customs.ValidatedTextInputLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tViewEvaluationDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_24"
                android:background="@drawable/sh_rect_date"
                android:clickable="true"
                android:drawablePadding="@dimen/dp_8"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:padding="@dimen/dp_16"
                android:text="@string/label_evaluation_select_date"
                app:drawableStartCompat="@drawable/ic_edit_calendar"
                app:drawableTint="@color/color_primary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tInputEvaluationGrade" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/sEvaluationDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_8"
                android:checked="true"
                app:layout_constraintBottom_toBottomOf="@id/tViewEvaluationDate"
                app:layout_constraintEnd_toEndOf="@id/tViewEvaluationDate"
                app:layout_constraintTop_toTopOf="@id/tViewEvaluationDate" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/cGroupEvaluation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_24"
                app:layout_constraintTop_toBottomOf="@id/tViewEvaluationDate"
                app:selectionRequired="true"
                app:singleSelection="true" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnEvaluationSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_16"
        android:text="@string/button_evaluation_save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sViewEvaluation" />

</androidx.constraintlayout.widget.ConstraintLayout>