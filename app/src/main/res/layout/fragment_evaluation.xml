<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tViewSubjectHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_background"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingHorizontal="@dimen/dp_12"
        android:paddingVertical="@dimen/dp_6"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="CI2125 â€” COMPUTACION I" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/tViewSubjectHeader">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:padding="@dimen/dp_16">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tViewLabelType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:labelFor="@id/cGroupEvaluation"
                android:text="@string/label_evaluation_type"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/cGroupEvaluation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:animateLayoutChanges="true"
                app:layout_constraintTop_toBottomOf="@id/tViewLabelType"
                app:selectionRequired="true"
                app:singleSelection="true" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tViewLabelGrade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:fontFamily="sans-serif-light"
                android:labelFor="@id/sBarMaxGrade"
                android:text="@string/label_evaluation_max_grade"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cGroupEvaluation" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tViewLabelGradeValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:text="@string/label_evaluation_max_grade"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:layout_constraintBottom_toBottomOf="@id/tViewLabelGrade"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tViewLabelGrade"
                tools:text="27.50 pts" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/sh_rect_date"
                app:layout_constraintBottom_toBottomOf="@id/sBarMaxGrade"
                app:layout_constraintEnd_toEndOf="@id/btnGradeUp"
                app:layout_constraintStart_toStartOf="@id/btnGradeDown"
                app:layout_constraintTop_toTopOf="@id/sBarMaxGrade" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGradeDown"
                style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                android:layout_width="@dimen/dp_48"
                android:layout_height="0dp"
                app:icon="@drawable/ic_left"
                app:layout_constraintBottom_toBottomOf="@id/sBarMaxGrade"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tViewLabelGrade"
                app:layout_constraintTop_toTopOf="@id/sBarMaxGrade" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGradeUp"
                style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                android:layout_width="@dimen/dp_48"
                android:layout_height="0dp"
                app:icon="@drawable/ic_right"
                app:layout_constraintBottom_toBottomOf="@id/sBarMaxGrade"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tViewLabelGrade"
                app:layout_constraintTop_toTopOf="@id/sBarMaxGrade"
                tools:ignore="ContentDescription" />

            <SeekBar
                android:id="@+id/sBarMaxGrade"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:paddingVertical="@dimen/dp_16"
                android:progress="0"
                app:layout_constraintEnd_toStartOf="@id/btnGradeUp"
                app:layout_constraintStart_toEndOf="@id/btnGradeDown"
                app:layout_constraintTop_toBottomOf="@id/tViewLabelGrade"
                tools:max="200"
                tools:progress="55" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tViewLabelDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:fontFamily="sans-serif-light"
                android:labelFor="@id/tViewLabelGrade"
                android:text="@string/label_evaluation_date"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/sBarMaxGrade" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/sEvaluationDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                app:layout_constraintBottom_toBottomOf="@+id/tViewLabelDate"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tViewLabelDate" />

            <include
                android:id="@+id/tViewDate"
                layout="@layout/view_evaluation_date_picker" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tViewLabelNotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="sans-serif-light"
                android:labelFor="@id/eTextNotes"
                android:text="@string/label_evaluation_notes"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                app:drawableEndCompat="@drawable/ic_expand_more"
                app:layout_constraintTop_toBottomOf="@id/tViewDate" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/eTextNotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:imeOptions="actionDone"
                android:importantForAutofill="no"
                android:inputType="textShortMessage|text|textCapSentences"
                android:maxLength="128"
                android:maxLines="1"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/tViewLabelNotes"
                tools:visibility="visible" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>