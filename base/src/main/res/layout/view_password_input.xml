<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_password"
        android:textColorHint="@color/color_accent"
        app:boxCornerRadiusBottomEnd="@dimen/dp_6"
        app:boxCornerRadiusBottomStart="@dimen/dp_6"
        app:boxCornerRadiusTopEnd="@dimen/dp_6"
        app:boxCornerRadiusTopStart="@dimen/dp_6"
        app:boxStrokeErrorColor="@color/color_error"
        app:errorIconDrawable="@drawable/ic_warning"
        app:errorIconTint="@color/color_error"
        app:errorTextColor="@color/color_error"
        app:passwordToggleEnabled="true"
        app:startIconDrawable="@drawable/ic_password">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:maxLength="60"
            android:selectAllOnFocus="true" />

    </com.google.android.material.textfield.TextInputLayout>

</merge>