<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_base"
    app:startDestination="@+id/fragment_splash">

    <action
        android:id="@+id/nav_to_sign_in"
        app:destination="@id/fragment_sign_in"
        app:popUpTo="@id/fragment_sign_in"
        app:popUpToInclusive="true" />

    <action
        android:id="@+id/nav_to_update_password"
        app:destination="@id/dialog_update_password" />

    <dialog
        android:id="@+id/dialog_enrollment_proof"
        android:name="com.gdavidpb.tuindice.enrollmentproof.ui.dialog.EnrollmentDownloadingBottomSheetDialog"
        tools:layout="@layout/R.layout.dialog_enrollment_downloading" />

    <dialog
        android:id="@+id/dialog_update_password"
        android:name="com.gdavidpb.tuindice.login.ui.dialog.UpdatePasswordBottomSheetDialog"
        tools:layout="@layout/dialog_update_password" />

    <fragment
        android:id="@+id/fragment_splash"
        android:name="com.gdavidpb.tuindice.login.ui.fragment.SplashFragment"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/nav_to_sign_in"
            app:destination="@id/fragment_sign_in"
            app:enterAnim="@anim/slide_in_from_bottom"
            app:exitAnim="@anim/slide_out_to_top"
            app:popUpTo="@id/fragment_splash"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/nav_to_summary"
            app:destination="@id/fragment_summary"
            app:popUpTo="@id/fragment_splash"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/fragment_sign_in"
        android:name="com.gdavidpb.tuindice.login.ui.fragment.SignInFragment"
        android:label="@string/label_sign_in_fragment"
        tools:layout="@layout/fragment_sign_in">
        <action
            android:id="@+id/nav_to_splash"
            app:destination="@id/fragment_splash"
            app:enterAnim="@anim/slide_in_from_top"
            app:exitAnim="@anim/slide_out_to_bottom"
            app:popUpTo="@id/fragment_sign_in"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/nav_to_browser"
            app:destination="@id/fragment_browser"
            app:enterAnim="@anim/slide_in_from_right"
            app:exitAnim="@anim/slide_out_to_left"
            app:popEnterAnim="@anim/slide_in_from_left"
            app:popExitAnim="@anim/slide_out_to_right" />
    </fragment>

    <fragment
        android:id="@+id/fragment_summary"
        android:name="com.gdavidpb.tuindice.summary.ui.fragment.SummaryFragment"
        android:label="@string/nav_summary"
        tools:layout="@layout/fragment_summary">
        <action
            android:id="@+id/nav_to_sign_in"
            app:destination="@id/fragment_sign_in"
            app:enterAnim="@anim/slide_in_from_top"
            app:exitAnim="@anim/slide_out_to_bottom"
            app:popUpTo="@id/fragment_summary"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/fragment_record"
        android:name="com.gdavidpb.tuindice.record.ui.fragment.RecordFragment"
        android:label="@string/nav_record"
        tools:layout="@layout/fragment_record">
        <action
            android:id="@+id/nav_to_enrollment_proof"
            app:destination="@id/dialog_enrollment_proof" />
        <action
            android:id="@+id/nav_to_evaluation_plan"
            app:destination="@id/fragment_evaluation_plan"
            app:enterAnim="@anim/slide_in_from_right"
            app:exitAnim="@anim/slide_out_to_left"
            app:popEnterAnim="@anim/slide_in_from_left"
            app:popExitAnim="@anim/slide_out_to_right" />
    </fragment>

    <fragment
        android:id="@+id/fragment_about"
        android:name="com.gdavidpb.tuindice.about.ui.fragments.AboutFragment"
        android:label="@string/nav_about"
        tools:layout="@layout/fragment_about">
        <action
            android:id="@+id/nav_to_browser"
            app:destination="@id/fragment_browser"
            app:enterAnim="@anim/slide_in_from_right"
            app:exitAnim="@anim/slide_out_to_left"
            app:popEnterAnim="@anim/slide_in_from_left"
            app:popExitAnim="@anim/slide_out_to_right" />
    </fragment>

    <fragment
        android:id="@+id/fragment_evaluation_plan"
        android:name="com.gdavidpb.tuindice.evaluations.ui.fragment.EvaluationPlanFragment"
        android:label="@string/nav_subject"
        tools:layout="@layout/fragment_evaluation_plan">
        <argument
            android:name="quarterId"
            app:argType="string" />
        <argument
            android:name="subjectId"
            app:argType="string" />
        <argument
            android:name="subjectCode"
            app:argType="string" />
        <argument
            android:name="subjectName"
            app:argType="string" />

        <action
            android:id="@+id/nav_to_evaluation"
            app:destination="@id/fragment_evaluation"
            app:enterAnim="@anim/slide_in_from_right"
            app:exitAnim="@anim/slide_out_to_left"
            app:popEnterAnim="@anim/slide_in_from_left"
            app:popExitAnim="@anim/slide_out_to_right" />
    </fragment>

    <fragment
        android:id="@+id/fragment_evaluation"
        android:name="com.gdavidpb.tuindice.evaluations.ui.fragment.EvaluationFragment"
        android:label="{title}"
        tools:layout="@layout/fragment_evaluation">
        <argument
            android:name="title"
            app:argType="string" />
        <argument
            android:name="quarterId"
            app:argType="string" />
        <argument
            android:name="subjectId"
            app:argType="string" />
        <argument
            android:name="subjectCode"
            app:argType="string" />
        <argument
            android:name="subjectName"
            app:argType="string" />
        <argument
            android:name="evaluationId"
            android:defaultValue="@null"
            app:argType="string"
            app:nullable="true" />
    </fragment>

    <fragment
        android:id="@+id/fragment_browser"
        android:name="com.gdavidpb.tuindice.base.ui.fragment.BrowserFragment"
        android:label="{title}"
        tools:layout="@layout/fragment_browser">
        <argument
            android:name="title"
            app:argType="string" />
        <argument
            android:name="url"
            app:argType="string" />
    </fragment>

</navigation>