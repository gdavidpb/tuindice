<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/sh_rect_date">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tViewEvaluationDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:drawablePadding="@dimen/dp_16"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_vertical"
        android:padding="@dimen/dp_16"
        android:text="@string/label_evaluation_select_date"
        app:drawableStartCompat="@drawable/ic_edit_calendar"
        app:drawableTint="@color/color_secondary_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/sEvaluationDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_8"
        android:checked="true"
        app:layout_constraintBottom_toBottomOf="@id/tViewEvaluationDate"
        app:layout_constraintEnd_toEndOf="@id/tViewEvaluationDate"
        app:layout_constraintTop_toTopOf="@id/tViewEvaluationDate" />

</androidx.constraintlayout.widget.ConstraintLayout>